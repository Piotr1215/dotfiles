[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[core]
	excludesfile = ~/.gitignore
[user]
	name = Piotr Zaniewski
	email = piotr@upbound.io
	signingkey = FED1B098B68D69FD
[alias]
	s = status
	st = status
	d = diff
	dc = diff --cached
	ci = commit --verbose
	cia = commit --verbose --all
	co = checkout
	su = submodule update --init --recursive
	logg = log --graph
	add-commit = !git add -A && git commit
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[push]
	default = matching
[branch]
	autosetuprebase = always
[init]
	defaultBranch = main
[commit]
	gpgsign = true
