[color]
branch = auto
diff = auto
interactive = auto
status = auto
[core]
excludesFile = ~/.gitignore
pager = delta
[user]
email = piotrzan@gmail.com
signingkey = 7E954FC99DDF7875
name = Piotr Zaniewski
[alias]
s = status
st = status
d = diff
dc = diff --cached
ci = commit --verbose
cia = commit --verbose --all
co = checkout
su = submodule update --init --recursive
logg = log --graph
; PROJECT: git-log
add-commit = !git add -A && git commit
	lg-detail = log --graph --decorate --pretty=format:'%C(yellow)%h%C(reset) %C(green)%ad%C(reset) %C(auto)%d%C(reset)%n%C(white)%B%C(reset)' --date=short
	lg = log --graph --decorate --color=always --pretty=format:'%C(yellow)%h%C(reset) -%C(red)%d%C(reset) %s %C(green)(%cr)%C(reset)' --abbrev-commit
[diff]
#tool = vimdiff
colorMoved = default
[merge]
tool = fugitive
conflictstyle = diff3
[push]
	default = current
[branch]
autosetuprebase = always
[init]
defaultBranch = main
[commit]
gpgsign = true
template = ~/.gitmessage
[interactive]
diffFilter = delta --color-only
[delta]
navigate = true # use n and N to move between diff sections
[url "git@github.com:"]
	insteadOf = https://github.com/
[mergetool "fugitive"]
	cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[rerere]
	enabled = true
[maintenance]
	repo = /home/decoder/dev/dotfiles
