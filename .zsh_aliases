# Global aliases
alias -g C='| xsel --clipboard'
alias -g G='| grep -i --color=always'
alias -g H=' --help'
alias -g L='| less'
alias -g NUL="> /dev/null 2>&1"
alias -g R="2>&1 | tee output.txt"
alias -g T="| tail -n +2"
alias -g V=' --version'

# Suffix aliases
alias -s md=nvim
alias -s txt=nvim
alias -s yaml=nvim

# Directories and files
alias f='__open-file.sh'
alias la='exa --color=always --long --all --sort=age --reverse --header --icons'
alias ls='exa --color=always --long --all --header --icons'
alias lsf='fd --max-depth=1 --type=file'
alias tr2='tree -LC 2 --si --sort name | less'

# LXC aliases
alias lux='lxc start ubuntu --console=vga'
## start and stop lxc vm with hybernated state
## meaning all programs and windows will preserve
alias lux--='lxc stop --stateful ubuntu'
alias lux-='lxc stop ubuntu'

# Commands shadow
alias cat='bat'
alias df=duf
alias diff=colordiff
alias fd='fd --hidden'
alias it='cat ~/issue-template.md | xsel --clipboard'
alias kk=/usr/bin/kubecolor
alias lol=lolcat
alias mux=tmuxinator
alias nv='neovide --multigrid --notabs'
alias pfn='__print-functions.sh'
alias ra=ranger
alias rg='rg --hidden --color=always'
alias vim=nvim
alias v=nvim
alias watch=viddy

## Kubernetes aliases
alias kdump='kubectl get all --all-namespaces'
alias kaf='kubectl apply -f'
alias kdf='kubectl delete -f'

# Other
alias addkey='eval $(ssh-agent) && ssh-add'
alias adit='vim ~/.zsh_aliases'
alias clock="__clock.sh &"
alias cplcom="fc -ln -1 | tr -d '\n' | xsel --clipboard"
alias dca='mux s dca'
alias ddgit='web_search github'
alias deb=deb-get
alias dev='cd ~/dev'
alias disk='gdu'
alias diskusage='du -sh * | sort -h --reverse'
alias dls="docker container ls -a"
alias dots='cd ~/dev/dotfiles'
alias dpsa="docker ps -a --format 'table {{.ID}}\t{{.Names}}\t{{.Image}}'" #docker ps -a with only id name and image
alias dps="docker ps --format 'table {{.ID}}\t{{.Names}}\t{{.Image}}'" #docker ps -a with only id name and image
alias gcc='git diff --stat --cached origin/master' # Git Check Commit before pushing
alias ghs='gh s'
alias ghweb='gh repo view --branch $(git rev-parse --abbrev-ref HEAD) --web'
alias glog='git log --graph --oneline --decorate'
alias gs='git show'
alias home='nohup firefox -P "Home" > /dev/null 2>&1 &'
alias lg='lazygit'
alias lsprog='ls /home/decoder/go/bin; ls /usr/bin; ls /usr/local/bin'
alias lst='dpkg -l' #List installed packages with their description
alias lvim='nvim -c "normal '\''0"'
alias mvim='vim $(git ls-files -m)'
alias lzd='docker run --rm -it -v /var/run/docker.sock:/var/run/docker.sock -v /config/lazydocker:/.config/jesseduffield/lazydocker lazyteam/lazydocker'
alias ms="tmuxinator start" 
alias mst="tmuxinator stop" 
alias relog="DISPLAY=:0 gnome-session-quit --force"
alias rest='shutdown now'
alias revive='shutdown -r now'
alias rmm='rm -i'
alias rm='rm -v'
alias serve="browser-sync start -s -f . --no-notify --host localhost --port 5000"
alias slack='fuzzpak slack 2>/dev/null &'
alias sr='omz reload'
alias tedit='vim ~/.tmux.conf'
alias tuic='task current'
alias tuid='task workdone'
alias upinstall='curl -sL https://cli.upbound.io | sh'
alias uxp="just ~/dev/dotfiles/scripts/uxp-setup/setup_infra"
alias uxp-="just ~/dev/dotfiles/scripts/uxp-setup/teardown"
alias wm='watch kubectl get managed'
alias work='nohup firefox -P "Work" > /dev/null 2>&1 &'
alias zedit='vim ~/.zshrc'
